<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.ryhupeja.znajdztrupa.controllers.NewCemeteryWindowController">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Name:"/>
                <Button cancelButton="true" mnemonicParsing="false" text="Cancel" GridPane.rowIndex="2"
                        onAction="#closeButtonClicked" fx:id="closeButton"/>
                <Button defaultButton="true" mnemonicParsing="false" text="Create" GridPane.columnIndex="1"
                        GridPane.rowIndex="2" onAction="#createButtonClicked"/>
                <TextField GridPane.columnIndex="1" fx:id="cemeteryNameTextField"/>
            </children>
        </GridPane>
    </center>
</BorderPane>
