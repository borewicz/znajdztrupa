<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ryhupeja.znajdztrupa.controllers.UploadImageWindowController">
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="File:"/>
                <Button fx:id="closeButton" cancelButton="true" mnemonicParsing="false" onAction="#closeButtonClicked"
                        text="Cancel" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Button fx:id="uploadButton" defaultButton="true" mnemonicParsing="false"
                        onAction="#uploadButtonClicked" text="Upload" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="Description:" GridPane.rowIndex="1"/>
                <TextField fx:id="descriptionTextField" prefHeight="27.0" prefWidth="344.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" text="Browse..." GridPane.columnIndex="2" onAction="#browseButtonClicked"/>
                <Label fx:id="fileNameLabel" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </bottom>
</BorderPane>
