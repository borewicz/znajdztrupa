<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ryhupeja.znajdztrupa.controllers.TrupDetailWindowController">
    <center>
        <VBox>
            <children>
                <Label fx:id="nameLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="JAN PAWEŁ" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
               <font>
                  <Font name="System Bold" size="29.0" />
               </font>
                </Label>
                <Label fx:id="diedLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="2137 - 0204">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
                </Label>
                <Label fx:id="cemeteryLabel" text="">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                <HBox>
                    <children>
                        <Button fx:id="snitchesButton" mnemonicParsing="false" onAction="#snitchButtonClicked" text="Like" visible="false" />
                        <Button fx:id="modifyButton" mnemonicParsing="false" text="Modify" visible="false" />
                        <Button fx:id="removeButton" mnemonicParsing="false" text="Remove" visible="false" />
                        <Button fx:id="uploadImageButton" mnemonicParsing="false" onAction="#uploadButtonClicked" text="Upload image" visible="false" />
                    </children>
                </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ListView fx:id="photosListView" onMouseClicked="#photoClicked" prefHeight="150.0" prefWidth="133.0" />
                  <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="86.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
